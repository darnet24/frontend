    <!-- Social -->
    <div class="flex flex-col items-start md:items-center">
      <h2 class="text-white font-bold mb-2">Social</h2>
      <ul class="space-y-1">
        <li><a href="https://www.facebook.com/DARNET24" class="hover:underline">Facebook</a></li>
        <li><a href="https://www.instagram.com/darnet24/" class="hover:underline">Instagram</a></li>
      </ul>
    </div>
  </div>

  <div class="text-center text-xs text-gray-500 mt-10">
    &copy; {new Date().getFullYear()} DARNET24. Wszelkie prawa zastrzeżone.
  </div>
  <CookieBanner />
</footer>